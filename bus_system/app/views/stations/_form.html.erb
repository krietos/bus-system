<%= render("layouts/errors", :object => @station) %>

<%= form_for(@station) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <%= f.submit(:class => 'btn btn-primary') %>
<% end %>

<h3>Add a line to this station:</h3>
<%= form_for(@stop) do |f| %>
  <div class="form-group">
    <% f.label :station_id %>
    <%= f.hidden_field(:station_id, :value => "#{@station.id}") %>
  </div>
  <div class="form-group">
    <%= f.label :line_id %>
    <% lines_array = Line.all.map { |line| [line.name, line.id]} %>
    <% lines_array.insert(0, []) %>
    <%= f.select(:line_id, options_for_select(lines_array)) %>
  </div>
  <div class="form-group">
    <%= f.label :time %>
    <%= f.text_field :time %>
  </div>
  <%= f.submit(:class => 'btn btn-primary') %>
  <% end %>
