<h1><%= @station.name %></h1>

<h3>Lines:</h3>
<ul>
  <% @station.lines.each do |line| %>
    <li><a href="/lines/<%= line.id %>"><%= line.name %></a></li>
  <% end %>
</ul>


<h3>Stops:</h3>

  <% @station.stops.order(:time).each do |stop| %>
    <ul>
    <li><%= stop.time.strftime("%l:%M%P") %>
      <ul>
        <li>Bus: <%=stop.bus.name %></li>
        <li>Line: <%= stop.line.name %></li>
      </ul>
    </li>
  </ul>
  <% end %>


<p><%= link_to "Edit station", edit_station_path, :class => "btn btn-default" %></p>


<p><%= link_to "Delete station", station_path(@station),
                        :confirm => "You sure?",
                        :method => "delete",
                        :class => "btn btn-danger" %></p>

<p><%= link_to "Back", stations_path, :class => "btn btn-default" %></p>
