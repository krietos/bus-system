<h1><%= @bus.name %></h1>

<% if @bus.line != nil %>
<h3>Line: <a href="/lines/<%= @bus.line.id %>"><%= @bus.line.name %></a></h3>
<% end %>

<%= link_to "Edit bus", edit_bus_path, :class => "btn btn-default" %>


<%= link_to "Delete bus", bus_path(@bus),
                        :confirm => "You sure?",
                        :method => "delete",
                        :class => "btn btn-danger" %>

<%= link_to "Back", buses_path, :class => "btn btn-default" %>
